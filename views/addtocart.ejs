    <%
        
        
      
        %>
        <div class="row">
            <div class="col-6">
                <div class="card">
                   
                    <img class="card-img-top" src="images/<%=data.image%>" alt="">
                    <form action="/user/checkout" method="POST">
                    <div class="card-body">
                       
                            <input type="hidden" name="icode" value="<%=data.icode%>">
                            <input type="hidden" name="iname" value="<%=data.iname%>">
                            <input type="hidden" name="image" value="<%=data.image%>">
                            <input type="hidden" name="price" value="<%=data.price%>">
                        <button type="button" class="decrease">-</button>
                        <input type="text " name="qty" id="qty" class="text-center " maxlength="3 " size="2 " value="1">
                        <button type="button" class="increase">+</button>

                    </div>
                    <div class="card-footer text-center">
                        
                        <button type="submit">ADD TO CART</button>
                        
                    
                    </div>
                    
                </form>
                <div class="card-footer text-center">
                    <a href="/cart"><button type="button"></button>Go To Checkout Page</a>
                </div>

                   

                </div>
            </div>
            <div class="col-6 " style="color: white;">
                <h1></h1>
                <h3>Price:<%=data.price%></h3>
                <h3>Category:<%=data.category%> </h3>
                <h3>Available offers:<br> Bank Offer10% off on ICICI Bank Credit Cards, up to ₹1250.<br> On orders of ₹5000 and aboveT&C Bank Offer10% off on ICICI Bank Credit Card EMI, up to ₹1250. <br>On orders of ₹5000 and aboveT&C Bank Offer5% Unlimited
                    Cashback on Flipkart Axis Bank Credit CardT&C Partner OfferBuy <br>and Get Free 6 months Gaana Plus SubscriptionKnow More</h3>
            </div>

        </div>
        <script>
            $(document).ready(function() {
                $('.decrease').click(function() {
                    var qty_val1 = $(this).next().val();
                    if (qty_val1 > 0) {
                        $('#qty').val(parseInt(qty_val1) - 1);
                    }
                });
                $('.increase').click(function() {
                    if ($("#qty").val() != "") {
                        var qty_val1 = $(this).prev().val();
                        $('#qty').val(parseInt(qty_val1) + 1);
                    }
                });
            });
        </script>
</body>

